{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@gotloop/api-model": ["libs/api-model/src/index.ts"],
      "@gotloop/simpl": ["libs/simpl/src/index.ts"]
    },
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "enableIvy": false
  }
}
